import tkinter as tk

#Create window, define name and set size
root = tk.Tk()
root.title("Tkinter AI GUI")
root.geometry("400x500")

#Create frames in main window
frame1 = tk.Frame(root)
frame2 = tk.Frame(root)
frame3 = tk.Frame(root)
frame4 = tk.Frame(root)
#Set location for frames
frame1.pack(pady=10)
frame2.pack(side="left")
frame3.pack(side="right")
frame4.pack(side="bottom")

#Create label, dropdown menu and launch button for model selection in top frame
label1 = tk.Label(frame1, text="Model Selection:")
label1.grid(row=0, column=0)
dropdown1 = tk.StringVar(frame1)
dropdown1.set("First Model")
options = ["First Model", "Second Model"]
dropdownmenu = tk.OptionMenu(frame1, dropdown1, *options)
dropdownmenu.grid(row=0, column=1)
confbutton = tk.Button(frame1, text="Launch Model")
confbutton.grid(row=0, column=2)

#Create User Input frame
label2 = tk.Label(frame2, text="User Input")
label2.grid(row=0, column=0, sticky="nw")


root.mainloop()
